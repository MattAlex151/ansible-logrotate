{{ logrotate_log_dir }}/*.{{ logrotate_log_extension }} {
    rotate {{ logrotate_rotate_count }}
    {{ logrotate_rotate_frequency }}
    size {{ logrotate_rotate_size }}
    {% 'compress'      if logrotate_compress       == 'yes' %}
    {% 'delaycompress' if logrotate_delay_compress == 'yes' %}
    {% 'missingok'     if logrotate_ignore_missing == 'yes' %}
    {% 'notifempty'    if logrotate_ignore_empty   == 'yes' %}
    create {{ logrotate_file_permissions }} {{ logrotate_user }} {{ logrotate_user_group }}
}