{{ logrotate_log_dir }}/*.{{ logrotate_log_extension }} {
    rotate {{ logrotate_rotate_count }}
    {{ logrotate_rotate_frequency }}
        {% if logrotate_compress is true %}
           compress
        {% if logrotate_delay_compress is true %}
            delaycompress
        {% endif %}
    {% endif %}
    {% if logrotate_ignore_missing is true %}
        missingok
    {% endif %}
    {% if logrotate_ignore_empty is true %}
        notifempty
    {% endif %}
    create {{ logrotate_file_permissions }} {{ logrotate_user }} {{ logrotate_user_group }}
}
